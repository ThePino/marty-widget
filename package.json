{
  "name": "time-tracker-widget",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "author": "Tu",
  "description": "Floating Time Tracker Widget",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json && electron-builder",
    "preview": "vite preview",
    "compile:electron": "tsc -p tsconfig.electron.json",
    "start:electron": "electron .",
    "test": "vitest"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "build": {
    "appId": "com.example.timetracker",
    "productName": "Time Tracker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    }
  }
}